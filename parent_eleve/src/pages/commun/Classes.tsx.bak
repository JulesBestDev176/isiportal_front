import React, { useEffect, useState } from "react";
import { Classe, ProfMatiere } from "../../models/Classe";
import { Professeur } from "../../models/Professeur";
import MainLayout from "../../components/layout/MainLayout";
import { useAuth } from "../../contexts/ContexteAuth";
import { useNavigate } from "react-router-dom";

const Classes: React.FC = () => {
  const { utilisateur } = useAuth();
  const navigate = useNavigate();
  const [classes, setClasses] = useState<Classe[]>([]);
  const [profs, setProfs] = useState<Professeur[]>([]);

  useEffect(() => {
    if (utilisateur?.role === "adminEcole") {
      navigate("/dashboard", { replace: true });
    }
  }, [utilisateur, navigate]);

  useEffect(() => {
    fetch("/data/classes.json").then(res => res.json()).then(data => setClasses(data));
    fetch("/data/professeurs.json").then(res => res.json()).then(data => setProfs(data));
  }, []);

  const getProfName = (id: string) => {
    const prof = profs.find(p => p.id === id);
    return prof ? `${prof.prenom} ${prof.nom}` : id;
  };

  return (
    <MainLayout>
      <h1 className="text-2xl font-bold mb-4">Gestion des classes</h1>
      <div className="p-4 md:p-8">
        <div className="bg-white rounded-lg shadow p-4 overflow-x-auto">
          <table className="min-w-full text-sm">
            <thead>
              <tr className="bg-primary-50">
                <th className="px-2 py-1">Nom</th>
                <th className="px-2 py-1">Niveau</th>
                <th className="px-2 py-1">Ann√©e scolaire</th>
                <th className="px-2 py-1">Effectif</th>
                <th className="px-2 py-1">Professeur(s)</th>
              </tr>
            </thead>
            <tbody>
              {classes.map(classe => (
                <tr key={classe.id} className="border-b">
                  <td className="px-2 py-1">{classe.nom}</td>
                  <td className="px-2 py-1">{classe.niveau}</td>
                  <td className="px-2 py-1">{classe.anneeScolaire}</td>
                  <td className="px-2 py-1">{classe.effectif}</td>
                  <td className="px-2 py-1">
                    {classe.professeurPrincipalId && (
                      <span>Professeur principal : {getProfName(classe.professeurPrincipalId)}</span>
                    )}
                    {classe.profsMatieres && classe.profsMatieres.length > 0 && (
                      <ul className="list-disc ml-4">
                        {classe.profsMatieres.map((pm: ProfMatiere, idx) => (
                          <li key={idx}>{pm.matiere} : {getProfName(pm.professeurId)}</li>
                        ))}
                      </ul>
                    )}
                  </td>
                </tr>
              ))}
            </tbody>
          </table>
        </div>
      </div>
    </MainLayout>
  );
};

export default Classes; 